# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/diagpro

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Moyasar Payment Gateway Configuration
MOYASAR_API_KEY=your_moyasar_api_key_here
MOYASAR_BASE_URL=https://api.moyasar.com/v1
MOYASAR_WEBHOOK_SECRET=your_webhook_secret_here

# Frontend URL (for payment callbacks)
FRONTEND_URL=http://localhost:3000

# JWT Configuration (if implementing authentication)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@diagpro.com
EMAIL_FROM_NAME=DiagPro Service Center

# SMS Configuration (for notifications)
SMS_PROVIDER=taqnyat
SMS_API_KEY=your_sms_api_key
SMS_SENDER_NAME=DiagPro

# WhatsApp Configuration (for notifications)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_TOKEN=your_whatsapp_token

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./public/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Smart Assistant Configuration
AI_SERVICE_URL=https://api.openai.com/v1
AI_API_KEY=your_openai_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key